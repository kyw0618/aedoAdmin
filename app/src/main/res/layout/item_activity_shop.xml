<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_activity_shop_sales_rates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:textColor="@color/colorAccentDark"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_activity_shop_sales_price"
            app:layout_constraintStart_toEndOf="@+id/tv_won"
            app:layout_constraintTop_toTopOf="@+id/tv_activity_shop_sales_price"
            tools:text="25%" />

        <TextView
            android:id="@+id/tv_activity_shop_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textColor="@color/item_activity_shop_originalPrice"
            android:textSize="10sp"
            app:layout_constraintStart_toStartOf="@+id/tv_activity_shop_sales_price"
            app:layout_constraintTop_toBottomOf="@+id/tv_activity_shop_sales_price"
            tools:text="80,080원" />

        <TextView
            android:id="@+id/tv_activity_shop_sales_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/item_activity_shop_salesPrice"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv_activity_shop_title"
            app:layout_constraintTop_toBottomOf="@+id/tv_activity_shop_title"
            tools:text="77,000" />

        <TextView
            android:id="@+id/tv_won"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="2dp"
            android:text="@string/item_activity_shop_won"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_activity_shop_sales_price"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/tv_activity_shop_sales_price"
            app:layout_constraintTop_toTopOf="@+id/tv_activity_shop_sales_price"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/iv_activity_shop_item"
            android:layout_width="100dp"
            android:layout_height="200dp"
            android:layout_marginStart="15dp"
            android:scaleType="centerInside"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:srcCompat="@drawable/activity_shop_sample_image" />

        <TextView
            android:id="@+id/tv_activity_shop_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.147"
            app:layout_constraintStart_toEndOf="@+id/iv_activity_shop_item"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="3단 기본형 근조화환" />

        <Button
            android:id="@+id/btn_activity_shop_purchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:backgroundTint="@color/white"
            android:drawableTop="@drawable/ic_shopping_cart"
            android:drawableTint="@color/black"
            android:fontFamily="sans-serif-condensed"
            android:paddingVertical="20dp"
            android:text="주문하기"
            android:textColor="@color/btn_shopping_text"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_activity_shop_badge"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

